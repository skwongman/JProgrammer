                    <img data-confirm-yes-6 src="/img/icon_tick.png" id="confirmYes" class="confirm-btn-edit6" name="edit6" style="z-index:2; display:none"></img>
                    <img data-confirm-no-6 src="/img/icon_cross.png" id="confirmNo" class="confirm-btn-edit6" name="edit6" style="z-index:2; display:none"></img>
        
