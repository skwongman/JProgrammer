<div id="dramaBannerBackgroundPhoto" class="drama-banner-center">
    <div id="transparentLayer" class="transparent-layer"></div>
    <div class="drama-banner-width">

        <!-- Drama Cover Photo -->
        <input type="file" id="editDramaCoverPhotoBtn" style="display:none" accept=".jpg, .jpeg, .png" />
        <label id="editDramaCoverPhotoLabel" class="drama-photo-container">
            <img id="dramaCoverPhoto" class="drama-photo"></img>
            <div id="editDramaCoverPhotoSubmitContainer" class="edit-drama-cover-photo-submit-btn" style="display:none;">
                <img id="editDramaCoverPhotoConfirmBtn" class="edit-drama-cover-photo-submit-btn-confirm" src="/img/icon_tick.png">
                <img id="editDramaCoverPhotoNotConfirmBtn" class="edit-drama-cover-photo-submit-btn-not-confirm" src="/img/icon_cross.png">
